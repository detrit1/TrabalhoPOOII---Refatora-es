<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.exemplo.curso1.controller.IncluiHabilidadeController">
    <children>
        <Label fx:id="lblNomeTabela" alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="570.0" text="Adicionar Habilidade">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" prefHeight="78.0" prefWidth="570.0" text="Nome Habilidade">
            <font>
                <Font size="15.0" />
            </font>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </Label>
        <TextField fx:id="txtNomHab" prefHeight="25.0" prefWidth="411.0" />
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="586.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <children>
            <HBox prefHeight="31.0" prefWidth="305.0">
               <children>
                  <Label text="Dano">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtDanHab" prefHeight="25.0" prefWidth="77.0" />
                  <Label text="                  ID">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtIdHab" prefHeight="25.0" prefWidth="73.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="31.0" prefWidth="238.0">
               <children>
                  <Label text="Custo de Mana">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCustoMana" alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="125.0" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="211.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Button fx:id="btnConfHab" onAction="#btnConfHabOnAction" prefHeight="37.0" prefWidth="74.0" text="Confirmar">
                          <padding>
                              <Insets bottom="10.0" right="10.0" top="10.0" />
                          </padding>
                      </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Button fx:id="btnVoltarHab" mnemonicParsing="false" onAction="#btnVoltarHabOnAction" prefHeight="37.0" prefWidth="74.0" text="Voltar" />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
        <ListView fx:id="listViewHabilidades" prefHeight="200.0" prefWidth="600.0" />
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="30.0" />
    </padding>
</VBox>
