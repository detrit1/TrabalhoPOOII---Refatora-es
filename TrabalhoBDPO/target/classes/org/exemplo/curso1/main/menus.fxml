<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.exemplo.curso1.controller.MenuController">
    <children>
        <MenuBar>
            <menus>
                <Menu text="Personagens">
                    <items>
                        <MenuItem fx:id="menuPersonagemInclui" onAction="#incluiPersonagemOnAction" text="Incluir" />
                        <MenuItem fx:id="menuPersonagemExclui" onAction="#excluiPersonagemOnAction" text="Alterar" />
                    </items>
                </Menu>
                <Menu text="Habilidades">
                    <items>
                        <MenuItem fx:id="menuHabilidadesInclui" onAction="#incluiHabilidadeOnAction" text="Incluir" />
                        <MenuItem fx:id="menuHabilidadesExclui" onAction="#excluirHabilidadeOnAction" text="Alterar" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ImageView fitHeight="374.0" fitWidth="600.0">
            <image>
                <Image url="@../image/Menus.jpg" />
            </image>
        </ImageView>
    </children>
</VBox>